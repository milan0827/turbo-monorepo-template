{
	"name": "project-samridi",
	"private": true,
	"scripts": {
		"build": "prettier --check . && pnpm lint && pnpm check-types && turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"check-types": "turbo run check-types",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"prettier": "prettier --write .",
		"prepare": "husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"prettier": "^3.6.0",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"turbo": "^2.5.4"
	},
	"packageManager": "pnpm@8.15.6",
	"engines": {
		"node": ">=18",
		"pnpm": ">=6.1.0",
		"npm": "Please-use-pnpm"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.ts": "eslint --fix",
		"**/*.tsx": "eslint --fix",
		"**/*.{ts,tsx,js,jsx,json,css,md}": "prettier --write"
	}
}
